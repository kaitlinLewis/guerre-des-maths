<%- include("partials/header") -%>
    <div>
        <h2>Add a post</h2>
        <form action="/problems/createProblems" enctype="multipart/form-data" method="post">
            <label for="title">Titre du problème (title)</label>
            <input type="text" id="title" name="title">
            <label for="problem">Le problème (problem to solve)</label>
            <textarea id="problem" name="problem"></textarea>
            <label for="imgUpload">L'image (image)</label>
            <input type="file" id="imgUpload" name="imgUpload">
            <button type="submit" value="Upload">Posez le problème(submit)</button>
        </form>
    </div>
    <%- include("partials/footer") -%>